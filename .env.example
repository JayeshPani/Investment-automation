# Required LLM + provider config
OPENROUTER_API_KEY=
OPENROUTER_MODEL=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Optional comma-separated fallback models (used by GUI on 429 rate limits)
OPENROUTER_MODEL_FALLBACKS=

# Optional news API key (leave empty to use Docker MCP Exa fallback)
EXA_API_KEY=

# Required company input (single company per run)
COMPANY_TICKER=MS
COMPANY_NAME=Morgan Stanley

# Optional market routing (for India: set MARKET=india and EXCHANGE_PREFERENCE=NSE/BSE)
MARKET=global
EXCHANGE_PREFERENCE=NSE

# Optional analysis controls
INVESTOR_PROFILE=moderate
ANALYSIS_HORIZON_DAYS=365
NEWS_LOOKBACK_DAYS=30

# Optional Gradio UI launch config
GRADIO_SERVER_NAME=127.0.0.1
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false
# Optional GUI retry attempts for 429/rate-limit errors
GUI_RATE_LIMIT_RETRIES=3
